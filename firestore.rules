rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own tasks collection
    match /users/{userId}/tasks/{taskId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Shared tasks collection - allow authenticated users to read/write
    // (More permissive for initial testing)
    match /shared_tasks/{taskId} {
      allow read, write: if request.auth != null;
    }
    
    // Sharing index - allow authenticated users to read/write
    // (More permissive for initial testing)  
    match /sharing_index/{userEmail}/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}